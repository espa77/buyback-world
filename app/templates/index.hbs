 <div class="layout-column flex" id="index">
     {{#unless userSelectedDevice}}
         <div class="flex index-text sec01">
             {{index-text}}
         </div>
     {{/unless}}

     {{index-device}}

     {{#unless userSelectedDevice}}
         <div class="device-type selector">
             {{device-selector send=(action 'deviceSelected')}}
         </div>
         <hr>
     {{else}}
         {{#if userSelectedDevice}}
             <div class="device-type selector">
                 {{device-selector send=(action 'deviceSelected')}}
             </div>
             <hr>
         {{/if}}
     {{/unless}}
 </div>


    {{liquid-outlet}}

    {{#unless userSelectedDevice}}
        <div class="index-bottom flex sec02">
            <br>
        <h1>Simple and Easy</h1>
            <div class="layout-row flex" id="simple-easy">
                <div class="layout-column flex">
                <h2>See your price in 30 seconds</h2>
                    <div class="paper-icon" id="timer">
                        {{paper-icon "forward-30" size=128}}
                    </div>
                </div>
                <div class="flex">
                <h2>Make appointment to sell</h2>
                   <div class="paper-icon" id="appointment">
                       {{paper-icon "person-pin" size=128}}
                   </div>
                </div>
                <div class="flex">
                <h2>Get Paid in as little as 1 hour</h2>
                    <div class="paper-icon" id="get-paid">
                        {{paper-icon "monetization-on" size=128}}
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="buybacker-team layout-row sec03">
            <div class="about flex">
                <div class="about-text flex">
                    <h2>About us</h2>
                    <p>
                        Decriptive text about Buybackers goes here
                    </p>
                </div>
            </div>
        </div>
        <div class="contact layout-row sec04">
            <div class="contact flex">
                <div class="contact-text flex">
                    <h2>Contact us</h2>
                    <p>
                        Decriptive text about contacting Buybackers goes here
                    <ul>
                        <li>address?</li>
                        <li>phone?</li>
                        <li>email?</li>
                        <li>anything else you want?</li>
                    </ul>
                    </p>
                </div>
            </div>
        </div>
    {{/unless}}




