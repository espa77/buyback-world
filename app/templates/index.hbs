<div class="layout-column flex" id="index">
    {{#unless userSelectedDevice}}
    <div class="flex index-text">
        {{index-text}}
    </div>
    {{/unless}}

    {{#if userSelectedDevice}}
        {{#each finalDevice as |device|}}
            {{selected-device reloadDevice=(action 'refreshDevice') reloadModel=(action 'refreshModel') image=device.image}}
        {{/each}}
    {{else}}
        <hr>
        {{index-device}}
        <div class="device-type selector">
            {{#each uniqueDevice as |device|}}
                {{device-selector send=(action 'deviceValue') id=device.id device_type=device.device_type image=device.image}}
            {{/each}}
        </div>
    {{/if}}
    <hr>

    {{#if userSelectedDevice}}
        {{#unless userSelectedModel}}
        <div class="layout-row layout-md-column" id="model-selection-text">
            <h2><em>What model?</em></h2>
        </div>
        <div class="device-model selector">
            {{#each uniqueModel as |uniqueModel|}}
                {{device-model deviceVal send=(action 'modelValue') id=uniqueModel.id device_model=uniqueModel.device_model image=uniqueModel.image}}
            {{/each}}
        </div>
        {{/unless}}
    {{/if}}

    {{#if userSelectedModel}}
        <div class="layout-row layout-md-column" id="network-selection-text">
            <h2><em>Choose your Network</em></h2>
        </div>
        <div class="device-network selector">
            {{#each uniqueNetwork as |network|}}
                {{device-network send=(action 'networkValue') network=network.network }}
            {{/each}}
        </div>
    {{/if}}
</div>


